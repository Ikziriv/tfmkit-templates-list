<style>
    /* Skeleton Loading Styles */
    @keyframes pulse-bg {
        50% {
            background-color: #3f3f46; /* zinc-700 */
        }
    }
    .skeleton {
        background-color: #52525b; /* zinc-600 */
        border-radius: 0.25rem;
        animation: pulse-bg 1.5s cubic-bezier(0.4, 0, 0.6, 1) infinite;
    }
    .cta-section.is-loading .content-wrapper {
        display: none;
    }
    .cta-section:not(.is-loading) .skeleton-wrapper {
        display: none;
    }
</style>

<section class="cta-section w-full py-16 md:py-24 px-4 md:px-12 is-loading">
    <!-- Skeleton Loader -->
    <div class="skeleton-wrapper w-full">
        <div class="text-center bg-zinc-900 rounded-lg p-12">
            <div class="skeleton h-10 w-3/4 mx-auto mb-4 rounded-md"></div>
            <div class="skeleton h-5 w-full max-w-2xl mx-auto mb-2 rounded-md"></div>
            <div class="skeleton h-5 w-2/3 max-w-2xl mx-auto mb-8 rounded-md"></div>
            <div class="skeleton h-12 w-32 mx-auto rounded-lg"></div>
        </div>
    </div>

    <!-- Real Content -->
    <div class="content-wrapper">
        <div class="text-center bg-zinc-900 rounded-lg p-12 animate-fade-in-up">
            <h2 class="text-3xl md:text-4xl font-black tracking-tighter text-white">Ready to Start Your Project?</h2>
            <p class="text-lg text-zinc-300 mt-4 mb-8 max-w-2xl mx-auto">Let's build something amazing together. Get in touch with us to discuss your ideas.</p>
            <a href="/contact" class="bg-white text-zinc-900 font-bold py-3 px-8 rounded-lg hover:bg-zinc-200 transition-colors">
                Contact Us
            </a>
        </div>
    </div>
</section>

<script is:inline>
    document.addEventListener('DOMContentLoaded', () => {
        const section = document.querySelector('.cta-section');
        if (section) {
            setTimeout(() => section.classList.remove('is-loading'), 1500);
        }
    });
</script>
