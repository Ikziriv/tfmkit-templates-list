<style>
    /* Skeleton Loading Styles */
    @keyframes pulse-bg {
        50% {
            background-color: #d4d4d8; /* zinc-300 */
        }
    }
    .skeleton {
        background-color: #e4e4e7; /* zinc-200 */
        border-radius: 0.25rem;
        animation: pulse-bg 1.5s cubic-bezier(0.4, 0, 0.6, 1) infinite;
    }
    .featured-posts-section.is-loading .content-wrapper,
    .featured-posts-section.is-loading .slider-nav-btn {
        display: none;
    }
    .featured-posts-section:not(.is-loading) .skeleton-wrapper {
        display: none;
    }
    .slider-container {
        position: relative;
        width: 100%;
        overflow: hidden;
    }

    .slider-wrapper {
        display: flex;
        transition: transform 0.4s ease-in-out;
    }

    .slide {
        flex-shrink: 0;
        width: 100%; /* Default for mobile */
    }

    /* Responsive slide widths */
    @media (min-width: 768px) {
        .slide {
            width: 50%;
        }
    }
    @media (min-width: 1024px) {
        .slide {
            width: 33.3333%;
        }
    }

    /* Navigation Buttons */
    .slider-nav-btn {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        z-index: 10;
        background-color: #18181b; /* zinc-900 */
        color: #ffffff;
        width: 44px;
        height: 44px;
        border-radius: 9999px;
        transition: background-color 0.3s, opacity 0.3s;
        box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        border: none;
    }
    .slider-nav-btn:hover {
        background-color: #3f3f46; /* zinc-700 */
    }
    .slider-nav-btn:disabled {
        opacity: 0.5;
        cursor: not-allowed;
        background-color: #27272a; /* zinc-800 */
    }

    #prev-btn {
        left: -1rem;
    }
    #next-btn {
        right: -1rem;
    }
</style>

<section class="featured-posts-section w-full py-16 md:py-24 px-4 md:px-12 border border-zinc-900 relative is-loading">
    <!-- Skeleton Loader -->
    <div class="skeleton-wrapper">
        <div class="text-left mb-12">
            <div class="skeleton h-12 w-1/3 mb-4"></div>
            <div class="skeleton h-6 w-2/3"></div>
        </div>
        <div class="slider-container">
            <div class="slider-wrapper -mx-2 md:-mx-4">
                <!-- Skeleton Slide 1 -->
                <div class="slide px-2 md:px-4">
                    <div class="border border-zinc-200/50 rounded-lg shadow-sm overflow-hidden h-full">
                        <div class="skeleton w-full h-48"></div>
                        <div class="p-6">
                            <div class="skeleton h-4 w-1/4 mb-4"></div>
                            <div class="skeleton h-6 w-3/4 mb-2"></div>
                            <div class="skeleton h-4 w-full mb-1"></div>
                            <div class="skeleton h-4 w-5/6"></div>
                        </div>
                    </div>
                </div>
                <!-- Skeleton Slide 2 (hidden on mobile) -->
                <div class="slide px-2 md:px-4 hidden md:block">
                    <div class="border border-zinc-200/50 rounded-lg shadow-sm overflow-hidden h-full">
                        <div class="skeleton w-full h-48"></div>
                        <div class="p-6">
                            <div class="skeleton h-4 w-1/4 mb-4"></div>
                            <div class="skeleton h-6 w-3/4 mb-2"></div>
                            <div class="skeleton h-4 w-full mb-1"></div>
                            <div class="skeleton h-4 w-5/6"></div>
                        </div>
                    </div>
                </div>
                <!-- Skeleton Slide 3 (hidden on mobile/tablet) -->
                <div class="slide px-2 md:px-4 hidden lg:block">
                    <div class="border border-zinc-200/50 rounded-lg shadow-sm overflow-hidden h-full">
                        <div class="skeleton w-full h-48"></div>
                        <div class="p-6">
                            <div class="skeleton h-4 w-1/4 mb-4"></div>
                            <div class="skeleton h-6 w-3/4 mb-2"></div>
                            <div class="skeleton h-4 w-full mb-1"></div>
                            <div class="skeleton h-4 w-5/6"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Real Content (hidden initially) -->
    <div class="content-wrapper">
        <div class="text-left mb-12 animate-fade-in-up">
            <h2 class="text-4xl md:text-5xl font-black tracking-tighter">Featured Posts</h2>
            <p class="text-lg text-zinc-600 mt-2 max-w-2xl">Hand-picked articles and insights from our team on the latest in tech and design.</p>
        </div>
        <!-- Slider main container -->
        <div class="slider-container animate-fade-in-up" style="animation-delay: 0.2s;">
            <div class="slider-wrapper -mx-2 md:-mx-4">
                <!-- Slide 1 -->
                <div class="slide px-2 md:px-4">
                    <div class="bg-white/50 backdrop-blur-sm border border-zinc-200/50 rounded-lg shadow-sm overflow-hidden group h-full">
                        <a href="#" class="block h-full flex flex-col">
                            <img src="https://images.unsplash.com/photo-1555066931-4365d14bab8c?q=80&w=800&auto=format&fit=crop" alt="Man coding on a laptop" class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300">
                            <div class="p-6 flex-grow">
                                <span class="text-xs font-bold uppercase text-zinc-500">Development</span>
                                <h3 class="mt-2 text-lg font-bold text-zinc-800 group-hover:text-zinc-900 transition-colors">The Art of Clean Code</h3>
                                <p class="mt-2 text-sm text-zinc-600">Learn how to write more readable, maintainable, and efficient code.</p>
                            </div>
                        </a>
                    </div>
                </div>
                <!-- Slide 2 -->
                <div class="slide px-2 md:px-4">
                    <div class="bg-white/50 backdrop-blur-sm border border-zinc-200/50 rounded-lg shadow-sm overflow-hidden group h-full">
                        <a href="#" class="block h-full flex flex-col">
                            <img src="https://images.unsplash.com/photo-1517694712202-14dd9538aa97?q=80&w=800&auto=format&fit=crop" alt="Laptop showing code on a desk" class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300">
                            <div class="p-6 flex-grow">
                                <span class="text-xs font-bold uppercase text-zinc-500">Design</span>
                                <h3 class="mt-2 text-lg font-bold text-zinc-800 group-hover:text-zinc-900 transition-colors">Minimalist Design Principles</h3>
                                <p class="mt-2 text-sm text-zinc-600">Explore the core principles of minimalism in modern user interface design.</p>
                            </div>
                        </a>
                    </div>
                </div>
                <!-- Slide 3 -->
                <div class="slide px-2 md:px-4">
                    <div class="bg-white/50 backdrop-blur-sm border border-zinc-200/50 rounded-lg shadow-sm overflow-hidden group h-full">
                        <a href="#" class="block h-full flex flex-col">
                            <img src="https://images.unsplash.com/photo-1542744173-8e7e53415bb0?q=80&w=800&auto=format&fit=crop" alt="Team working in an office" class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300">
                            <div class="p-6 flex-grow">
                                <span class="text-xs font-bold uppercase text-zinc-500">Productivity</span>
                                <h3 class="mt-2 text-lg font-bold text-zinc-800 group-hover:text-zinc-900 transition-colors">Boosting Your Workflow</h3>
                                <p class="mt-2 text-sm text-zinc-600">Tips and tricks to help you and your team become more productive.</p>
                            </div>
                        </a>
                    </div>
                </div>
                <!-- Slide 4 -->
                <div class="slide px-2 md:px-4">
                    <div class="bg-white/50 backdrop-blur-sm border border-zinc-200/50 rounded-lg shadow-sm overflow-hidden group h-full">
                        <a href="#" class="block h-full flex flex-col">
                            <img src="https://images.unsplash.com/photo-1587620962725-abab7fe55159?q=80&w=800&auto=format&fit=crop" alt="A desk with two monitors showing code" class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300">
                            <div class="p-6 flex-grow">
                                <span class="text-xs font-bold uppercase text-zinc-500">Tech</span>
                                <h3 class="mt-2 text-lg font-bold text-zinc-800 group-hover:text-zinc-900 transition-colors">Navigating the Tech Landscape</h3>
                                <p class="mt-2 text-sm text-zinc-600">A look at the ever-changing world of technology and what's next.</p>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <!-- Slider Navigation -->
        <button id="prev-btn" class="slider-nav-btn" aria-label="Previous slide">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" /></svg>
        </button>
        <button id="next-btn" class="slider-nav-btn" aria-label="Next slide">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
        </button>
    </div>
</section>

<script is:inline>
    document.addEventListener('DOMContentLoaded', () => {
        const section = document.querySelector('.featured-posts-section');
        if (!section) return;

        // Simulate content loading
        setTimeout(() => {
            section.classList.remove('is-loading');

            // Initialize slider after content is shown
            const sliderContainer = section.querySelector('.slider-container');
            if (!sliderContainer) return;

            const sliderWrapper = sliderContainer.querySelector('.slider-wrapper');
            const slides = Array.from(sliderContainer.querySelectorAll('.slide'));
            const prevBtn = document.getElementById('prev-btn');
            const nextBtn = document.getElementById('next-btn');
            const totalSlides = slides.length;

            let currentIndex = 0;
            let slidesToShow = 3;

            function updateSlidesToShow() {
                if (window.innerWidth < 768) {
                    slidesToShow = 1;
                } else if (window.innerWidth < 1024) {
                    slidesToShow = 2;
                } else {
                    slidesToShow = 3;
                }
            }

            function updateSliderPosition() {
                const slideWidth = slides[0].offsetWidth;
                sliderWrapper.style.transform = `translateX(-${currentIndex * slideWidth}px)`;
                updateButtons();
            }

            function updateButtons() {
                prevBtn.disabled = currentIndex === 0;
                nextBtn.disabled = currentIndex >= totalSlides - slidesToShow;
            }

            function showNextSlide() {
                if (currentIndex < totalSlides - slidesToShow) {
                    currentIndex++;
                    updateSliderPosition();
                }
            }

            function showPrevSlide() {
                if (currentIndex > 0) {
                    currentIndex--;
                    updateSliderPosition();
                }
            }

            function init() {
                updateSlidesToShow();
                updateSliderPosition();
                nextBtn.addEventListener('click', showNextSlide);
                prevBtn.addEventListener('click', showPrevSlide);

                window.addEventListener('resize', () => {
                    updateSlidesToShow();
                    if (currentIndex > totalSlides - slidesToShow) {
                        currentIndex = Math.max(0, totalSlides - slidesToShow);
                    }
                    updateSliderPosition();
                });
            }

            init();
        }, 1500); // 1.5s delay to simulate loading. You can adjust or remove this.
    });
</script>