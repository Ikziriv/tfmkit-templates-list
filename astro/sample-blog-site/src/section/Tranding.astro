<style>
    /* Skeleton Loading Styles */
    @keyframes pulse-bg {
        50% {
            background-color: #d4d4d8; /* zinc-300 */
        }
    }
    .skeleton {
        background-color: #e4e4e7; /* zinc-200 */
        border-radius: 0.25rem;
        animation: pulse-bg 1.5s cubic-bezier(0.4, 0, 0.6, 1) infinite;
    }
    .trending-section.is-loading .content-wrapper {
        display: none;
    }
    .trending-section:not(.is-loading) .skeleton-wrapper {
        display: none;
    }
</style>

<section class="trending-section w-full py-16 md:py-4 px-4 md:px-12 is-loading">
    <!-- Skeleton Loader -->
    <div class="skeleton-wrapper w-full">
        <div class="text-left mb-12">
            <div class="skeleton h-12 w-1/3 mb-4 rounded-md"></div>
            <div class="skeleton h-6 w-1/2 rounded-md"></div>
        </div>
        <div class="relative overflow-hidden rounded-lg shadow-lg">
            <div class="skeleton w-full h-[500px] rounded-lg"></div>
            <div class="absolute bottom-0 left-0 w-full p-8">
                <div class="skeleton h-10 w-3/4 mb-4 rounded-md"></div>
                <div class="skeleton h-5 w-full mb-2 rounded-md"></div>
                <div class="skeleton h-5 w-2/3 rounded-md"></div>
            </div>
        </div>
    </div>

    <!-- Real Content -->
    <div class="content-wrapper animate-fade-in-up">
        <div class="text-left mb-12">
            <h2 class="text-4xl md:text-5xl font-black tracking-tighter">Trending Now</h2>
            <p class="text-lg text-zinc-600 mt-2">The most popular post on our blog right now.</p>
        </div>
        <a href="#" class="block group">
            <div class="relative overflow-hidden rounded-lg shadow-lg">
                <img src="https://images.unsplash.com/photo-1506748686214-e9df14d4d9d0?q=80&w=1170&auto=format&fit=crop" alt="Scenic landscape with mountains and a lake" class="w-full h-[500px] object-cover transition-transform duration-500 ease-in-out group-hover:scale-105" />
                <div class="absolute bottom-0 left-0 w-full p-8 bg-gradient-to-t from-black/80 to-transparent">
                    <h3 class="text-3xl md:text-4xl font-bold text-white mb-2">Exploring the Alps: A Hiker's Journey</h3>
                    <p class="text-white/90 text-lg">Join us on an unforgettable journey through the breathtaking landscapes of the Swiss Alps. Discover hidden trails, stunning vistas, and the serene beauty of nature.</p>
                </div>
            </div>
        </a>
    </div>
</section>

<script is:inline>
    document.addEventListener('DOMContentLoaded', () => {
        const section = document.querySelector('.trending-section');
        if (section) {
            setTimeout(() => section.classList.remove('is-loading'), 1500);
        }
    });
</script>